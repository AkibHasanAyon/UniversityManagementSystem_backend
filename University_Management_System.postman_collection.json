                            "raw": "{\n    \"email\": \"student@university.edu\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{base_url}}/api/auth/forgot-password/",
                        "description": "Trigger a password reset email."
                    }
